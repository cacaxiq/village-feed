<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:VillageApp.Models"
             x:DataType="models:Post"
    xmlns:views="clr-namespace:VillageApp.Views.Templates"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="VillageApp.Views.Templates.PostImageTemplate">
    <StackLayout Padding="0,0,0,30" Margin="0">
        <views:PostHeader Post="{Binding .}"/>
        <Border Margin="0,24,0,21" 
        StrokeShape="RoundRectangle 5,5,5,5">
            <Image  Source="{Binding Medias[0]}" Aspect="AspectFill" HeightRequest="{DynamicResource DefaultPostHeight}"/>
        </Border>
         <Label FontSize="12" LineHeight="22" Text="{Binding Content}" TextColor="#919191"  Padding="0,0,0,28"/>
        <BoxView HeightRequest="1" Color="#EAEAEA" Margin="0,16,0,0"/>
    </StackLayout>
</ContentView>
